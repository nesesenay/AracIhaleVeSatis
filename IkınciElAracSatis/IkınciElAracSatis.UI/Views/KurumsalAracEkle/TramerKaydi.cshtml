
@{
    ViewBag.Title = "TramerKaydi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IkınciElAracSatis.UI.Models.VM.AracTramer.AracTramerKaydiVM

<<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Araç Tramer Bilgileri</h1>
    </div>

    @using (Html.BeginForm("TramerBilgisi", "KurumsalAracEkle", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="row">
            <div class="col-xl-12 col-lg-12 mx-auto">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary mr-2">Toplam Tramer Tutarı : </h6>
                        @Html.DisplayFor(a => a.AracTramer.AracTramerUcreti.Ucret, new { htmlAttributes = new { @class = "border border-secondary rounded w-25 p-2 form-control" } })
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        @foreach (var item in Model.AracTramer.AracParcaDurumlari)
                                        {
                                            <th>@item.ParcaDurumu</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.AracTramer.AracParcalari)
                                    {
                                        <tr>
                                            <td>@item.AracParcaAdi</td>
                                            <td>
                                                @if (Model.AracDurum.Any(x => x.AracParcaID == item.AracParcaID && x.AracParcaDurumID == 1))
                                                {
                                                    <input type="checkbox" name="selectedItems1" value="@item.AracParcaID" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" name="selectedItems1" value="@item.AracParcaID" />
                                                }
                                            </td>
                                            <td>
                                                @if (Model.AracDurum.Any(x => x.AracParcaID == item.AracParcaID && x.AracParcaDurumID == 2))
                                                {
                                                    <input type="checkbox" name="selectedItems2" value="@item.AracParcaID" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" name="selectedItems2" value="@item.AracParcaID" />
                                                }
                                            </td>
                                            <td>
                                                @if (Model.AracDurum.Any(x => x.AracParcaID == item.AracParcaID && x.AracParcaDurumID == 3))
                                                {
                                                    <input type="checkbox" name="selectedItems3" value="@item.AracParcaID" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" name="selectedItems3" value="@item.AracParcaID" />
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>



                            </table>
                        </div>
                        <div class="text-right pr-4 pb-4 mt-4">
                            @Html.ActionLink("Geri Dön", "AracGuncelle", "KurumsalAracEkle", new { @class = "btn btn-primary font-weight-bold" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

