
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IkınciElAracSatis.UI.Models.VM.Admin.AdminProfilVM

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            Merhaba, @Html.DisplayFor(a => a.Ad, new { @class = "mr-2" })
            @Html.DisplayFor(a => a.Soyad)
            <i style="font-size: 40px;" class="fas fa-laugh-wink text-warning"></i>
        </h1>
    </div>
    @using (Html.BeginForm("Guncelle", "AdminKullanici", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Profil Bilgileri</h6>
            </div>

            <div class="card-body row px-4">

                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow border-left-primary">
                        <div class="card-body d-flex align-items-center">
                            @Html.HiddenFor(a => a.KullaniciID)
                            <span class="mr-2 font-weight-bold text-primary text-uppercase">Ad Soyad : </span>
                        
                            @Html.EditorFor(a => a.Ad, new { htmlAttributes = new { @class = "mr-2 border border-secondary rounded border-opacity-10" } })
                            @Html.EditorFor(a => a.Soyad, new { htmlAttributes = new { @class = "border border-secondary rounded border-opacity-10" } })
                        </div>
                    </div>
                </div>

                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow  border-left-primary">
                        <div class="card-body d-flex align-items-center">
                            <span class="mr-2 font-weight-bold text-primary text-uppercase">Email : </span>
                            @Html.EditorFor(a => a.Email, new { htmlAttributes = new { @class = "border border-secondary rounded border-opacity-10" } })
                        </div>
                    </div>
                </div>
                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow border-left-primary">
                        <div class="card-body d-flex align-items-center">
                            <span class="mr-2 font-weight-bold text-primary text-uppercase">Şifre : </span>
                            @Html.EditorFor(a => a.Sifre, new { htmlAttributes = new { @class = "border border-secondary rounded border-opacity-10" } })
                        </div>
                    </div>
                </div>
                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow border-left-primary">
                        <div class="card-body d-flex">
                            <span class="mr-2 font-weight-bold text-primary text-uppercase">Telefon No : </span>
                            @Html.EditorFor(a => a.Telefon, new { htmlAttributes = new { @class = "border border-secondary rounded border-opacity-10" } })
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" name="name" value="Düzenle" />
        </div>
    }

</div>
