
@{
    ViewBag.Title = "PaketTanimla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IkınciElAracSatis.UI.Models.VM.Kullanici.KullaniciPaketVM

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            Kurumsal Kullanıcı : @Html.DisplayFor(a => a.KurumsalKullanici.Ad, new { @class = "mr-2" })
            @Html.DisplayFor(a => a.KurumsalKullanici.Soyad)
            <i style="font-size: 40px;" class="fas fa-laugh-wink text-warning"></i>
        </h1>
    </div>
    @using (Html.BeginForm("PaketTanimla", "PaketTanimlama", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Bilgileri</h6>
            </div>
            <div class="card-body row px-4">


                <div class="col-6 pt-4">
                    <div>
                        <div class="card mb-2 border-right-0 shadow border-left-primary">
                            <div class="card-body d-flex">
                                <span class="mr-2 font-weight-bold text-primary text-uppercase">Ad Soyad : </span>
                                @Html.DisplayFor(a => a.KurumsalKullanici.Ad, new { @class = "mr-2" })
                                @Html.DisplayFor(a => a.KurumsalKullanici.Soyad)
                                @Html.HiddenFor(a => a.KurumsalKullanici.KurumsalKullaniciID)
                            </div>
                        </div>
                    </div>

                    <div class="card mb-2 border-right-0 shadow  border-left-primary">
                        <div class="card-body d-flex">
                            <span class="mr-2 font-weight-bold text-primary text-uppercase">Email : </span>
                            @Html.DisplayFor(a => a.KurumsalKullanici.Email)
                        </div>
                    </div>
                </div>

                <div class="col-4 ml-auto mr-4 pt-2">
                    <div class="ml-auto">
                        <div class="text-center row">
                            <span class="mb-2">Paket Seç</span>
                            @Html.DropDownListFor(a => a.KullaniciPaketleri.PaketID, @Model.KullaniciPaketleri.Paketler, new { @class = "btn btn-outline-dark mx-auto w-100 mb-4", @type = "button" })

                            <div class="mx-auto mt-2">
                                <input type="submit" class="btn btn-dark font-weight-bold" value="Paket Tanımla" />
                            </div>
                        </div>
                    </div>
                </div>



                <div class="col-12 mt-5">
                    <div class="row mt-5 text-center">

                        <div class="col-4">
                            <div class="card paket mx-auto shadow-lg" style="width: 22rem;">
                                <div class="card-body p-4">

                                    <h3 style="color: #FFD700" class="card-title">Altın Paket</h3>
                                    <p class="card-text">Aylık ihaleye çıkabilecek araç sayısı : 10</p>
                                </div>
                            </div>
                        </div>


                        <div class="col-4">
                            <div class="card paket mx-auto shadow-lg" style="width: 22rem;">
                                <div class="card-body p-4">

                                    <h3 style="color: #808080" class="card-title">Gümüş Paket</h3>
                                    <p class="card-text">Aylık ihaleye çıkabilecek araç sayısı : 15</p>

                                </div>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="card paket mx-auto shadow-lg" style="width: 22rem;">
                                <div class="card-body p-4">

                                    <h3 style="color: #CD7F32" class="card-title">Bronz Paket</h3>

                                    <p class="card-text">Aylık ihaleye çıkabilecek araç sayısı : 20</p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>

        </div>
    }

    </div>

