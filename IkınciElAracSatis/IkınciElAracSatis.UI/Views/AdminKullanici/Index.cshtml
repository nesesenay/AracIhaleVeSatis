
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IkınciElAracSatis.UI.Models.VM.Admin.AdminProfilVM
  
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            Merhaba, @Html.DisplayFor(a => a.Ad, new { @class = "mr-2" })
            @Html.DisplayFor(a => a.Soyad)
            <i style="font-size: 40px;" class="fas fa-laugh-wink text-warning"></i>
        </h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Profil Bilgileri</h6>
        </div>
        <div class="card-body row px-4">

            <div class="col-md-7 p-2">
                <div class="card mb-2 border-right-0 shadow border-left-primary">
                    <div class="card-body d-flex">
                        <span class="mr-2 font-weight-bold text-primary text-uppercase">Ad Soyad : </span>
                        @Html.DisplayFor(a => a.Ad, new { @class = "mr-2" })
                        @Html.DisplayFor(a => a.Soyad)
                    </div>
                </div>
            </div>

            <div class="col-md-7 p-2">
                <div class="card mb-2 border-right-0 shadow  border-left-primary">
                    <div class="card-body d-flex">
                        <span class="mr-2 font-weight-bold text-primary text-uppercase">Email : </span>
                        @Html.DisplayFor(a => a.Email)
                    </div>
                </div>
            </div>
            <div class="col-md-7 p-2">
                <div class="card mb-2 border-right-0 shadow border-left-primary">
                    <div class="card-body d-flex">
                        <span class="mr-2 font-weight-bold text-primary text-uppercase">Şifre : </span>
                        @Html.DisplayFor(a => a.Sifre)
                    </div>
                </div>
            </div>
            <div class="col-md-7 p-2">
                <div class="card mb-2 border-right-0 shadow border-left-primary">
                    <div class="card-body d-flex">
                        <span class="mr-2 font-weight-bold text-primary text-uppercase">Telefon No : </span>
                        @Html.DisplayFor(a => a.Telefon)
                    </div>
                </div>
            </div>
            <div class="mt-4 text-center form-check">
                @Html.CheckBox("hesapAktifMi", Model.HesapAktifMi, new { @class = "form-check-input", @type = "checkbox", @id = "defaultCheck1" })
                <label class="mr-2 form-check-label" for="defaultCheck1">Hesap Aktif Mi</label>
            </div>

        </div>

    </div>
    <div class="text-right">
        @Html.ActionLink("Güncelle", "Guncelle", new { id = Model.KullaniciID }, new { @class = "btn btn-primary" })
        
          
    </div>
   
</div>

